<p id="notice"><%= notice %></p>

<h1>Listing Product Orders</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_orders.each do |product_order| %>
      <tr>
      <td> <%= product_order.id %> </td>
      <td> <%= product_order.product_id %> </td>
      <td> <%= product_order.product_qty %> </td>
       <td> <%= product_order.product_price %> </td>
     

        <td><%= link_to 'Show', product_order %></td>
        <td><%= link_to 'Edit', edit_product_order_path(product_order) %></td>
        <td><%= link_to 'Destroy', product_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

